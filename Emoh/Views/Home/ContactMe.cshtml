@{
    ViewData["Title"] = ViewData["MetaDescription"] = "ارتباط با من";
}

<div class="row">
    <div class="col-md-12">
        <div class="card bg-light text-dark text-right h-100">
            <div class="card-header"><h2 style="font-size:1.5rem;"><i class="fa fa-envelope align-middle text-danger"></i> @ViewData["Title"]</h2></div>
            <div class="card-body">
                @if (ViewData["Result"] != null)
                {
                    <div class="row">
                        <div class="col-md">
                            @if (Convert.ToBoolean(ViewData["Result"]) == true)
                            {
                                <h4 class="alert alert-success">
                                    <i class="far fa-check-circle  align-middle"></i> با عرض تشکر ، پیام شما با موفقیت ارسال گردید.
                                </h4>
                            }
                            else
                            {
                                <h4 class="alert alert-danger">
                                    <i class="far fa-check-circle  align-middle"></i> با عرض پوزش ، پیام شما ارسال نشد؛ لطفاً مجدداً تلاش نمایید.
                                    @ViewData["ExceptionMessage"]
                                </h4>
                            }
                        </div>
                    </div>
                }

                <form asp-controller="Home" asp-action="ContactMe">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label class="text-danger" for="name">نام : </label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="نام خود را وارد نمایید" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="text-danger" for="email">ایمیل : </label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="ایمیل خود را وارد نمایید" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="text-danger" for="subject">موضوع پیام : </label>
                            <select id="subject" name="subject" class="form-control">
                                <option value="1" selected>درخواست طراحی سایت</option>
                                <option value="2">درخواست کلاس خصوصی</option>
                                <option value="3">درخواست مشاوره برنامه نویسی</option>
                                <option value="4">سایر موارد</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="text-danger" for="body">متن پیام : </label>
                        <textarea class="form-control" id="body" name="body" rows="3" required></textarea>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12 justify-content-center">
                            <button type="submit" class="btn btn-danger">ارسال پیام</button>
                            <button type="reset" class="btn btn-outline-danger">بازنشانی</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

